extends layouts/main
include mixins/contentBlock

block content
    .userBox.mainWrap
        .userInfoBox 
            .userInfo 
                .avatar(style=`background-image:url("${userInfo.profile_img}")`)
                div
                    .userName 
                        p #{userInfo.nickname}
                        span #{userInfo.email}
                    p.userIntroduction 소개글의 작성해보자
                    if (locals.isLogin && userInfo.idx === locals.user.idx)
                    ul.userBtn  
                        li.fas.fa-user-plus.icon(onclick=``) 팔로잉
                        li.fas.fa-user-edit.icon(onclick=`location.href='/users/${userInfo.idx}/edit'`) 프로필 편집
                        li.fas.fa-sign-out-alt.icon(onclick=`location.href='/logout'`) 로그아웃

        ul.accountInfo
            li 게시물 
                span #{contents.length}
            li 팔로잉 
                span -
            li 팔로워
                span -
        .userContentWrap
            each item in contents
                +userContentBlock({
                    idx: item.idx,
                    creator: item.creator,
                    title: item.title,
                    fileUrl: item.fileUrl,
                    value:  item.value,
                    date: item.regdate
                })