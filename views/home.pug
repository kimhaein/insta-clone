extends layouts/main
include mixins/contentBlock

block content
    .homeBox.mainWrap
        div
            each item in contents
                +contentBlock({
                    idx: item.idx,
                    creator: item.creator,
                    content: item.fileUrl,
                    date: item.regdate
                })
        .userInfoBox
            if locals.isLogin
                a(href=`/users/${locals.user.idx}`) 
                    .userInfo 
                        .avatar(style=`background-image:url("${locals.user.profile_img}")`)
                        .userName 
                            p #{locals.user.nickname}
                            span #{locals.user.email}
                    .followerBox 팔로워 리스트
            else         
                a(href='/login') 로그인 하러 가기 ->